# =============================================================================
# MODULE_DISPLAY_NAME - Environment Configuration
# =============================================================================
# Copy this file to .env.local for local development
# =============================================================================

# =============================================================================
# Frontend Configuration
# =============================================================================

# Vite dev server port
VITE_PORT=5003

# API base URL (for local development, proxy to production)
VITE_API_URL=https://nkz.robotika.cloud

# =============================================================================
# Backend Configuration
# =============================================================================

# Application
APP_NAME=MODULE_DISPLAY_NAME
APP_VERSION=1.0.0
DEBUG=true
API_PREFIX=/api/MODULE_NAME

# CORS (for local development)
CORS_ORIGINS=["http://localhost:5003","http://localhost:5173"]

# =============================================================================
# Keycloak / Authentication
# =============================================================================

KEYCLOAK_URL=https://auth.robotika.cloud/auth
KEYCLOAK_REALM=nekazari
JWT_AUDIENCE=account

# Service-to-service authentication key (optional)
# MODULE_MANAGEMENT_KEY=your-secret-key

# =============================================================================
# Database (uncomment if using)
# =============================================================================

# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/database

# =============================================================================
# Redis (uncomment if using Celery or caching)
# =============================================================================

# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/1
