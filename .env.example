# =============================================================================
# Nekazari Platform — Environment Variables for docker-compose
# =============================================================================
# Copy this file to .env and adjust values as needed.
# Defaults below are safe for local development (docker compose up).

# ---- Database ----
POSTGRES_USER=postgres
POSTGRES_PASSWORD=nekazari-dev-password
POSTGRES_DB=nekazari

# ---- MongoDB (Orion-LD backend) ----
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=nekazari-mongo-dev

# ---- Redis ----
REDIS_PASSWORD=nekazari-redis-dev

# ---- MinIO (S3-compatible object storage) ----
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ---- Keycloak ----
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ---- Cesium (3D maps — optional, works without it) ----
CESIUM_TOKEN=

# ---- OpenWeather (optional, weather-worker uses OpenMeteo by default) ----
OPENWEATHER_API_KEY=
