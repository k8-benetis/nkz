# =============================================================================
# Frontend Environment Variables - Enterprise Configuration
# =============================================================================
# Copy this file to .env.local for local development
# For Vercel deployment, set these in Vercel Dashboard > Settings > Environment Variables
# =============================================================================

# Environment (development, staging, production)
# For Vercel production, set to: production
VITE_ENVIRONMENT=production

# API Configuration
# Leave empty to use relative URLs (Vercel rewrites handle routing to nkz.robotika.cloud)
# Or set explicitly to: https://nkz.robotika.cloud
VITE_API_URL=
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# =============================================================================
# Keycloak Configuration (CRITICAL)
# =============================================================================
# Keycloak URL - Must point to auth.robotika.cloud
# Use auth.robotika.cloud directly to bypass Vercel (Vercel rewrites don't work for POST requests)
VITE_KEYCLOAK_URL=https://auth.robotika.cloud/auth

# Keycloak Realm
VITE_KEYCLOAK_REALM=nekazari

# Keycloak Client ID
VITE_KEYCLOAK_CLIENT_ID=nekazari-frontend

# Keycloak Redirect URI
# CRITICAL: Must match the domain where the frontend is deployed
# For Vercel production: https://nekazari.robotika.cloud
# This MUST also be configured in Keycloak client settings (Valid Redirect URIs)
# For local development: http://localhost:3000 or http://localhost:5173
VITE_KEYCLOAK_REDIRECT_URI=https://nekazari.robotika.cloud

# Optional: Keycloak Admin Panel URL (defaults to VITE_KEYCLOAK_URL/admin)
VITE_KEYCLOAK_ADMIN_URL=

# =============================================================================
# External Services
# =============================================================================
# NGSI-LD Context URL
# For production: https://nkz.robotika.cloud/ngsi-ld-context.json
VITE_CONTEXT_URL=https://nkz.robotika.cloud/ngsi-ld-context.json

# Optional: Grafana URL (defaults to window.location.origin/grafana)
VITE_GRAFANA_URL=

# Optional: Prometheus URL
VITE_PROMETHEUS_URL=

# Optional: ROS2 Bridge WebSocket URL
VITE_ROS2_BRIDGE_URL=

# Optional: GeoServer URL
VITE_GEOSERVER_URL=

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_I18N=true
VITE_ENABLE_MONITORING=false
VITE_ENABLE_DEBUG=false
